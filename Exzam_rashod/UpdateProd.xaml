 <Controls:MetroWindow x:Class="Exzam_rashod.UpdateProd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exzam_rashod"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"    
        mc:Ignorable="d"
      Title="Редактирование" Height="450" Width="500">

    <StackPanel>
        <TextBlock Height="32" FontSize="20" HorizontalAlignment="Center">Введите ид расхода:</TextBlock>
        <TextBox Name="IdTb"></TextBox>
        <Button Name="startBtn" Height="44" Click="Button_Click">Начать</Button>
        <TextBlock Name="titleTB" HorizontalAlignment="Center" FontSize="20"></TextBlock>
        <TextBox Name="titleTb"></TextBox>
        <TextBlock Name="PriceTB" HorizontalAlignment="Center" FontSize="20"></TextBlock>
        <TextBox Name="PriceTb"></TextBox>
        <DatePicker  HorizontalAlignment = "Left" Margin = "5,5,5,5"  SelectedDateFormat="Long" Name = "DatePicker2" VerticalAlignment = "Top" Width = "300" />
        <Button Name="UpdateBtn" Click="UpdateBtn_Click">Изменить</Button>
    </StackPanel>
    </Controls:MetroWindow >
